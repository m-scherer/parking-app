<h1 class="text-center">Spots</h1>
<%= react_component 'Table' %>
<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_GEOCODE_KEY'] %>}"></script>
<h1>ERB/RUBY</h1>
<div class="container-fluid" id="table">
    <table class="table table-condensed">
      <thead class="text-center">
        <tr>
          <th>Lot</th>
          <th>Spot Number</th>
          <th>Address</th>
          <th>Availability</th>
        </tr>
      </thead>
      <tbody>
        <% @spots.each do |spot| %>
        <tr id="spot">
          <td><%= spot.lot.name %></td>
          <td><%= spot.number %></td>
          <td>tbd</td>
          <% if spot.taken %>
          <td>Taken</td>
          <% else %>
          <td>Available</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
